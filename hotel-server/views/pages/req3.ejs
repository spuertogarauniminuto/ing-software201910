<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">

    <!-- Bootstrap 4 -->
    <link rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
    crossorigin="anonymous">
    <!--Bootstrap 4 -->

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Custom CSS -->

    <title>Software Hotel</title>
  </head>
  <body>

    <!--Navegación-->
    <%include ../partials/header%>

    <!-- Cabecera -->
    <header class="cabecera-principal">
      <div class="background text-white py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-6 text-center">
              <h1>Preguntar Por Descuento</h1>

                  <form action="http://localhost:3000/req3" method="post">
                    <br></br>

                    <div class="form-group">
                      <label for="nombre">Nombre Del Usuario</label>
                      <input type="text" class="form-control" id="nombre" aria-describedby="emailHelp" placeholder="Ingrese nombre del usuario">
                    </div>

                    <div class="form-group">
                      <label for="identificacion">Número De Identificación Del Usuario</label>
                      <input type="text" class="form-control" id="identificacion" placeholder="Ingrese el número de identificación del usuario">


                      <div class="form-group">
                        <label for="costo">Costo habitación</label>
                        <input type="text" class="form-control" id="costo" placeholder="Ej: 10000">

                        </div>

                      <br></br>
                    <button type="submit" class="btn btn-warning">Buscar</button>
                    <button type="reset" class="btn btn-warning">Limpiar Campos</button>
                  </form>

            </div>

            <div class="col-md-6">
              <img src="/img/imgDescuento.jpg" alt="imagen" class="img-fluid">

            </div>

          </div>
        </div>
      </div>
    </header>

    <br>
        <center>
        <div class="col-md-10 text-center">
            <table class="table">
                 <thead class="thead-dark">
                    <tr>
                      <th scope="col">Nombre Del Usuario</th>
                      <th scope="col">Número De Identificación Del Usuario</th>
                      <th scope="col">Costo Habitación</th>
                      <th scope="col">Porcentaje Descuento</th>
                    </tr>
                    <% for(var i=0; i < data.length; i++){ %>
                      <tr>
                        <td><%= data[i].nombre %></td>
                        <td><%= data[i].identificacion %></td>
                        <td><%= data[i].costo %></td>
                        <td><%= data[i].34 / costo * 100 %></td
                      </tr>
                  <% }%>
                </thead>
            </table>
        </div>
        </center>

    <!-- Pie de pagina -->
    <%include ../partials/footer%>

    <!-- Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <!-- Bootstrap JavaScript -->
  </body>
</html>
